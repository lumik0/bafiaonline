{
    "&":{
        "& .header":{
            "height": "50px"
        },
        "& button": {
            "transition": "transform .5s"
        },
        "& button:enabled:hover": {
            "background": "#D1343C"
        },
        "& button:enabled:active": {
            "background": "#D1343C",
            "transform": "scale(.8)"
        },
        "& button:disabled": {
            "background-color": "#620d10"
        },
        "& .rooms-filter": {
            "flex-wrap": "wrap"
        },
        "& .input-chat": {
            "width": "100%",
            "height": "40px"
        }
    }
}